<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppWindowAnimationStyle"
           parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out</item>
    </style>

    <style name="Animation.Activity.BottomSlide"
           parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="Toolbar"
           parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:elevation"
              tools:targetApi="lollipop">4dp
        </item>
        <item name="elevation">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">@android:color/white</item>
        <item name="titleTextAppearance">@style/TextAppearance.PhotoDrama.Toolbar</item>
    </style>

    <style name="TextAppearance.PhotoDrama.Toolbar"
           parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_larger</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="TextAppearance.PhotoDrama.Toolbar.Dark">
        <item name="android:textSize">@dimen/text_size_larger</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>


    <style name="Toolbar.Dark">
        <item name="android:background">@color/window_background_dark</item>
        <item name="titleTextAppearance">@style/TextAppearance.PhotoDrama.Toolbar.Dark</item>
    </style>

</resources>
